# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=hr_user
DB_PASSWORD=your_secure_password
DB_NAME=hr_helpdesk
DB_SYNC=true
USE_POSTGRES=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"

# Firebase Mock Configuration (for development)
ENABLE_FIREBASE_MOCK=false
MOCK_FIREBASE_PROJECT_ID=mock-project-id
MOCK_FIREBASE_USER_ID=mock-user-id
MOCK_FIREBASE_USER_EMAIL=mock@example.com
MOCK_FIREBASE_STORAGE_URL=https://example.com/mock-file
MOCK_FIREBASE_BUCKET_NAME=mock-bucket

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_MAX_TEXT_LENGTH=15000

# Server Configuration
PORT=3001
NODE_ENV=development
